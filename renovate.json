{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prFooter": "/assign me\n/assign_reviewer @repos/ipenplatform/squads/user-interaction/user-interaction-guilds/user-interaction-kubernetes-guild",
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "dependencyDashboardOSVVulnerabilitySummary": "all",
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "automerge": true,
  "ignoreTests": true,
  "ignorePaths": [
    "base/_archive/**"
  ],
  "customManagers": [
    {
      "customType": "jsonata",
      "fileFormat": "yaml",
      "managerFilePatterns": [
        "/\\/chart\\.yaml$/"
      ],
      "matchStrings": [
        "{\"depName\": name, \"registryUrl\": repo, \"currentValue\": version}"
      ],
      "datasourceTemplate": "helm"
    }
  ],
  "packageRules": [
    {
      "description": "Updates for Helm Charts need to be verified manually",
      "matchManagers": [
        "custom.jsonata"
      ],
      "matchDatasources": [
        "helm"
      ],
      "automerge": false,
      "automergeType": "pr"
    }
  ]
}
